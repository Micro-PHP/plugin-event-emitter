{
    "name": "micro/plugin-event-emitter",
    "description": "Micro Framework: Application plugin to provide an event emitter",
    "license": "MIT",
    "type": "micro-plugin",
    "authors": [
        {
            "name": "Stanislau.Komar",
            "email": "stanislau_komar@epam.com"
        }
    ],
    "require": {
        "micro/autowire": "^2.0",
        "micro/dependency-injection": "^2.0",
        "micro/event-emitter": "^2.0",
        "micro/kernel": "^2.0",
        "micro/kernel-boot-dependency": "^2.0",
        "micro/plugin-locator": "^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.34"
    },
    "autoload": {
        "psr-4": {
            "Micro\\Plugin\\EventEmitter\\": "/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "minimum-stability": "dev"
}
